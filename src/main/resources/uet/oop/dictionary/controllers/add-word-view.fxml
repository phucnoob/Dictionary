<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         spacing="10"
         stylesheets="@../css/add-word-view.css"
         styleClass="add-word-view"
         type="javafx.scene.layout.VBox">
    <Label styleClass="title" textAlignment="CENTER" text="Add word"/>
    <VBox spacing="4">
        <HBox alignment="CENTER_LEFT" styleClass="target-form-group">
            <Label text="Word Target" />
            <TextField HBox.hgrow="ALWAYS" />
            <Button id="add-definition" styleClass="icon-button">
                <graphic>
                    <FontIcon iconLiteral="bi-plus" iconSize="32"/>
                </graphic>
            </Button>
        </HBox>
        <HBox styleClass="explain-form-group" alignment="CENTER_LEFT">
            <Label text="Explain"/>
            <ComboBox focusTraversable="false">
                <value>Danh tá»«</value>
            </ComboBox>
            <TextField HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="6">
        <padding>
            <Insets bottom="12" />
        </padding>
        <Button id="clear" text="Clear"/>
        <Button id="save" text="Save" />
    </HBox>
</fx:root>
