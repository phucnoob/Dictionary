<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import uet.oop.dictionary.ui.WordForm?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         spacing="10"
         fx:id="root"
         stylesheets="@../css/add-word-view.css"
         styleClass="add-word-view"
         type="javafx.scene.layout.VBox">
    <Label styleClass="title" textAlignment="CENTER" text="Add word"/>
    <WordForm fx:id="wordForm" spacing="6" />
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="6">
        <padding>
            <Insets bottom="12" />
        </padding>
        <Button fx:id="clearBtn" id="clearBtn" text="Clear"/>
        <Button fx:id="addBtn" id="addBtn" text="Add" />
    </HBox>
</fx:root>
