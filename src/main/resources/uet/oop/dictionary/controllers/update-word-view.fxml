<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import uet.oop.dictionary.ui.WordForm?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         spacing="10"
         fx:id="root"
         stylesheets="@../css/update-word-view.css"
         styleClass="update-word-view"
         type="javafx.scene.layout.VBox">
    <Label styleClass="title" textAlignment="CENTER" text="Update word"/>
    <WordForm fx:id="wordForm" spacing="6" />
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="6">
        <padding>
            <Insets bottom="12" />
        </padding>
        <Button fx:id="clearBtn" id="clearBtn" text="Clear"/>
        <Button fx:id="updateBtn" id="updateBtn" text="Update" />
    </HBox>
</fx:root>
